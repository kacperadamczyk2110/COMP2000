<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@color/main_background"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="30dp"
        android:background="@color/box_background"

        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/box_background"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="2dp">


            <TextView
                android:id="@+id/requestedHolidays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requested Holidays"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="30dp"
        android:background="@color/box_background"

        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/box_background"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="2dp">


            <TextView
                android:id="@+id/littleTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Holiday Request"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/box_background"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:padding="2dp">

                <TextView
                    android:id="@+id/requestedDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/10/2024 - 05/10/2024"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/status1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accpted"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/accepted_box"
                    android:layout_gravity="right"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="30dp"
        android:background="@color/box_background"

        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/box_background"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="2dp">


            <TextView
                android:id="@+id/littleTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Holiday Request"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/box_background"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:padding="2dp">

                <TextView
                    android:id="@+id/requestedDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11/11/2024 - 02/12/2024"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/status2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Denied"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/denied_box"
                    android:layout_gravity="right"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="30dp"
        android:background="@color/box_background"

        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/box_background"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backButtonRequestedHolidays"
                android:text="Back"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/main_background"
                app:cornerRadius="20dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>










</LinearLayout>